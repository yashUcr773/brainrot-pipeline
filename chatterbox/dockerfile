FROM python:3.10

WORKDIR /app

RUN pip install --upgrade pip
RUN pip install torchaudio

COPY /chatterbox-repo /app/chatterbox-repo

RUN cd chatterbox-repo && pip install -e .

COPY /tts /app/tts

CMD ["sh"]

